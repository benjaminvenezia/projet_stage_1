<div class="card">
        <div class="card__header">
            {% if article.image.name is defined %}
                <h2>{{ article.title }}</h2>
                <img src="{{ asset('build/img/')~article.image.name }}" alt="">
                <span class="author_date"> Le {{ article.date|format_datetime('short', 'none', locale='fr') }} par {{ article.author }}</span>
            {% endif %}
        </div>
        <div class="card__body">
            {% if article.image.name is not defined%}
                <h2>{{ article.title }}</h2>
            {% endif %}
            
            {% autoescape "html" %}
                <p>{{ article.description|raw}}</p>
            {% endautoescape %} 
        </div>
       
</div>