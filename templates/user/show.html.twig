{% extends 'base.html.twig' %}

{% block title %}Panneau de configuration{% endblock %}

{% block body %}
    

    <div class="container">
        <div class="row">
            <div class="col mb-2">
                <h1>Mon compte</h1>
            </div>
        </div>
         <div class="row">
            <div class="col-3">
                <p>mail : {{ mail }}</p>
                <p>username :  {{ username }}</p>
                <p>inscrit le : {{ createdAt|format_datetime() }}</p>
                
                
                {{ form_start(formView) }}
                {{ form_row(formView) }}
            
                {{ form_end(formView) }}


                {% if isVerified %}
                    <p class="badge bg-success">Le compte a été vérifié.</p>
                {% else %}
                    <p class="badge bg-warning">Votre compte est non vérifié.</p>
                {% endif %}               
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button id="btn_deleting_account" class="btn btn-sm"><a href="{{ path('user_deleteaccount') }}">supprimer mon compte <i class="fas fa-user-times"></i></a></button> 
                <button class="btn btn-sm"><a href="{{ path('user_changepassword') }}">Changez de mot de passe</a></button> 
            </div>
        </div>
    
    
    </div>

{% endblock %}
