{% extends "base.html.twig" %}

{% block title %}
    Mon article
{% endblock %}

{% block body %}
    
    <div class="container">
        <div class="row">

            <div class="col-1">
                <div>
                    <a class="btn btn-primary" onClick="window.history.back();">revenir</a>
                </div>
                {% if  ReadingPercentage < 100  %}
                    <div>
                     <a class="btn btn-primary"  href="{{ path('article_show', {'step':nextArticleStep, 'theme':theme }) }}">article suivant</a>
                    </div>
                {% endif %}
               
            </div>
            <div class="col-11">
                {% include "shared/_card.html.twig" %}

                <div class="progress mb-5">
                    {% if  ReadingPercentage < 100  %}
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: {{ ReadingPercentage }}%">Progression de lecture du thème : {{ ReadingPercentage|round(0) }}%</div>
                    {% else %}
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: {{ ReadingPercentage }}%">Vous avez lu {{ ReadingPercentage }} du thème, merci.</div>
                        
                        
                    {% endif %}
                </div>
            </div>
         
        </div>
            
        
        

        
         

    </div>
{% endblock %}
